@model ApplicationType
<form method="Post" asp-action="DeleteConfim">
    <div class="border p-3">
        <input asp-for="Id" hidden />
        <div class="form-group row">
            <h2 class="text-info pl-3">
                Delete Application
            </h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row pt-3">
                    <div class="col-4 ">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row pt-3">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100 " value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back &nbsp;<i class="fa-solid fa-right-from-bracket"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}