@model Stroy.kg.Models.Product2

<form method="Post" >
    <div class="border p-3">
        <input asp-for="Id" hidden />
        <div class="form-group row">
            <h2 class="text-info pl-3">
                Edit product
            </h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row pt-3">
                    <div class="col-4 ">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" disabled/>
                    </div>

                </div>
                <div class="form-group row pt-3">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" class="form-control summernote " ></textarea>

                    </div>

                </div>
                <div class="form-group row pt-3">
                    <div class="col-4">
                        <label asp-for="price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="price" class="form-control" disabled />

                    </div>

                </div>

                <div class="form-group row pt-3">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.Name" class="form-control" disabled />
                    </div>

                </div>
                <div class="form-group row pt-3">
                    <div class="col-4">
                        <label asp-for="ApplicationId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationType.Name" class="form-control" disabled />
                    </div>

                </div>
                <div class="form-group row pt-3">
                    <div class="col-8 offset-4 row">

                        <div class="col">

                                <input type="submit" class="btn btn-danger w-100 " value="Delete" />
                          
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back&nbsp;<i class="fa-solid fa-right-from-bracket"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 pt-3">
                @if (Model.Id != 0)
                {
                    <img src="@WC.ImagePath@Model.Image" width="100%" style="border-radius:5px;border:1px;solid #bbb" />

                }
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <script>

        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                disable:false
            });
        });
    </script>
}